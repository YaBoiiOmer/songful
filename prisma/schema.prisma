generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DB_FILE")
}

model Song {
  id            String        @id
  name          String
  youtubeUrl    String        @map("youtube_url")
  cloudinaryUrl String       @map("cloudinary_url")
  addedAt       DateTime      @default(now()) @map("added_at")
  artists       SongArtist[]
  playlists     SongPlaylist[]
}

model Artist {
  id     String        @id @unique
  name   String        @unique
  songs  SongArtist[]

  @@index([id, name])
}

model Playlist {
  id      String   @id @unique
  name    String
  addedAt DateTime @default(now()) @map("added_at")
  songs   SongPlaylist[]
}

model SongPlaylist {
  songId     String
  playlistId String
  song       Song     @relation(fields: [songId], references: [id])
  playlist   Playlist @relation(fields: [playlistId], references: [id])

  @@id([songId, playlistId])
}

model SongArtist {
  songId   String
  artistId String
  song     Song   @relation(fields: [songId], references: [id])
  artist   Artist @relation(fields: [artistId], references: [id])

  @@id([songId, artistId])
  @@unique([artistId])
}
